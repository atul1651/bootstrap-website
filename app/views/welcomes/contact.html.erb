<html>
<head>


    <script>
        $(function(){
            // hide the div on page load and use a slidedown effect
            $('div.floated-content').fadeOut(0, function(){
                $(this).slideDown(2000);
		});
		});
   
 $(function(){
            // hide the div on page load and use a slidedown effect
            $('div#address').fadeOut(0, function(){
                $(this).slideDown(3000);
		});
		});
   
$(function(){
            // hide the div on page load and use a slidedown effect
            $('section#contact').fadeOut(0, function(){
                $(this).slideDown(3000);
		});
		});
   





 </script>

  </head>
  <body>

<div class="floated-content">
<h4>Find us on google:</h4>
    <div id="map"></div>
    
</div>
 
<html>
 <%= form_for(@welcome) do |f| %>
  <% if @welcome.errors.any? %>

      <h2><%= pluralize(@welcome.errors.count, "error") %> prohibited this welcome from being saved:</h2>

      <ul>
      <% @welcome.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

  <% end %>
<!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class="section-subheading text-muted">Please fill the form for feedback and queries.</h3>
                </div>
            </div>
            <div class="row">
   
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    
            <%= f.text_field :name1 ,:placeholder=>"Your Name *",:class=>"form-control "%>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
           <%= f.text_field :email1 ,:placeholder=>"Your Email *",:class=>"form-control "%>
                                    <p class="help-block text-danger"></p>
                                </div>


                                <div class="form-group">
          <%= f.text_field :phone ,:placeholder=>"Your Phone *",:class=>"form-control "%>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
           <%= f.text_area :message ,:placeholder=>"Your Message *",:class=>"form-control "%>
                                    <p class="help-block text-danger"></p>
                                </div>

                                 <div class="form-group">
<%= f.select :submission_type, options_for_select(%w[ENQUIRY CAREERS OTHERS],:selected => [@welcome.submission_type]) ,:class=>"form-control", :prompt=> "Please Select for the services to apply" %>
                              <p class="help-block text-danger"></p>
                                </div>


                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                           <%= f.submit 'Send Message',:class=>"btn btn-xl" %>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
  <% end %>
  
